<%= form_for([@message], html: { class: 'form-horizontal' }, validate: true) do |f| %>
  <% if @message.errors.any? %>
    <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12">
        <%= f.label :message, "Massage: " %><br><br>
        <%= f.text_area :message, class: 'form-control' %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>